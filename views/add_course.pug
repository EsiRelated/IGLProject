extends layout

block content
  h1 #{title}
  form(method= 'POST', action='/enss/addCourse')
    #form-group
      label Niv:
      select.form-control(name="nivSelection")
        option 1CS
        option 2CS
    #form-group
      label groups :
      br
      .form-check.form-check-inline
        input#inlineCheckbox1.form-check-input(name='groupSelection',type='checkbox', value=1)
        label.form-check-label(for='inlineCheckbox1') group 1
      .form-check.form-check-inline
        input#inlineCheckbox2.form-check-input(name='groupSelection',type='checkbox', value=2)
        label.form-check-label(for='inlineCheckbox2') group 2
      .form-check.form-check-inline
        input#inlineCheckbox3.form-check-input(name='groupSelection',type='checkbox', value=3)
        label.form-check-label(for='inlineCheckbox3') group 3
    #form-group
      label Subject:
      input.form-control(name='subject', type='text')
    #form-group
      label Ens Name:
      input.form-control(name='ensName', type='text')
    #form-group
      label Title:
      input.form-control(name='title', type='text')
    #form-group
      label Course file:
      input.form-control(name='courseFile', type='text')
    br
    input.btn.btn-primary(type='submit',value='Submit')
